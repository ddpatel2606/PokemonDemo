<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">https://pokeapi.co</domain>
        <domain includeSubdomains="true">https://pokeapi.co/api/v2/</domain>
        <domain includeSubdomains="true">https://raw.githubusercontent.com/</domain>
        <domain includeSubdomains="true">https://github.com/</domain>
    </domain-config>

    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>
</network-security-config>